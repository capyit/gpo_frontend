{
  "include": ["src/**/*"],
  "resolveJsonModule":true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.(c|le|sa|sc)ss$"
        }
      }
    ]
  }
}
